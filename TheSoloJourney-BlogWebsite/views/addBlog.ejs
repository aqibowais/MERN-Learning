<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blog</title>
    <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">Create New Blog Post</h2>
                    </div>
                    <div class="card-body">
                        <form action="/blog" method="POST" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title" required>
                            </div>
                            <div class="mb-3">
                                <label for="coverImageUrl" class="form-label">Cover Image URL</label>
                                <input type="file" class="form-control" id="coverImageUrl" name="coverImageUrl">
                            </div>
                            <div class="mb-3">
                                <label for="body" class="form-label">Content</label>
                                <textarea class="form-control" id="body" name="body" rows="6" placeholder="Write your blog content here..." required></textarea>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Publish Blog</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts.ejs') %>
</body>
</html>